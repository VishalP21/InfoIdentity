<!--=============== CSS ===============-->
<link rel="stylesheet" href="~/css/style.css">

<div class="login">
    <img src="~/Images/login-bg.png" alt="login image" class="login__img">

    <form method="post" asp-action="Register" asp-controller="Account" class="container">
        <h1 class="login__title">Register</h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="login__content">
            <div class="login__box">
                <i class="ri-user-3-line login__icon"></i>

                <div class="login__box-input">
                    <input type="email" asp-for="Email" required class="login__input" id="login-email" placeholder=" ">
                    <label asp-for="Email" class="login__label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="login__box">
                <i class="ri-lock-2-line login__icon"></i>

                <div class="login__box-input">
                    <input type="password" asp-for="Password" required class="login__input" id="password" id="login-pass" placeholder=" ">
                    <label asp-for="Password" class="login__label">Password</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span class="password-toggle-icon"><i class="ri-eye-off-line login__eye" id="login-eye"></i></span>
                </div>
            </div>

            <div class="login__box">
                <i class="ri-lock-2-line login__icon"></i>

                <div class="login__box-input">
                    <input type="text" asp-for="ConfirmPassword" required class="login__input" id="login-pass" placeholder=" ">
                    <label asp-for="ConfirmPassword" class="login__label">ConfirmPassword</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="login__button">Register</button>

        <p class="login__register">
            If have an account? <a style="cursor: pointer;" onclick="window.location= '@Url.Action( "Login", "Account")'" ;>Login</a>
        </p>
    </form>
</div>


<script src="~/js/Eye_Toggle.js"></script>